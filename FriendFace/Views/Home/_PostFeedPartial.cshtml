@* _PostFeedPartial file *@

@model FriendFace.ViewModels.HomeIndexViewModel

@foreach (var post in Model.PostsInFeed)
{
    <div id="postContainer-@post.Id" class="col-md-6 offset-md-3 mb-3">
        <div class="card">
            <div class="card-header" style="background-color: #f8f8f8">
                <div class="d-flex justify-content-between align-items-center">
                    @* Name, Username *@
                    <span>
                        <span style="font-weight: bold;">@post.User.FirstName @Html.Raw(" ") @post.User.LastName</span>
                        <span style="font-size: 80%;" class="text-muted">@Html.Raw("@")@post.User.UserName</span>
                    </span>
                </div>
            </div>
            <div class="card-body">
                @* The content of the post *@
                <p id="postContent-@post.Id" contenteditable="false" class="card-text text-left">@post.Content</p>

                @* Date and icons *@
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">@post.Time.ToString("HH:mm dd/MM/yy")</small>

                    <span style="font-size: 80%;" class="text-muted">
                        @{
                            bool isLiked = post.Likes.Any(like => like.UserId == Model.User.Id);
                            string heartIcon = GetHeartIcon(isLiked);
                            string heartIconColor = isLiked ? "red" : "inherit";
                        }
                        <i class="@heartIcon" style="color: @heartIconColor; cursor: pointer;" data-post-id="@post.Id" onclick="toggleLikeOfPost(this)"></i>
                        <span id="likeCount-@post.Id">@post.Likes.Count</span>
                        <i class="far fa-comment comment-btn" id="comment-btn-@post.Id" data-post-id="@post.Id" style="cursor: pointer;"></i> @post.Comments.Count
                    </span>
                </div>

                @* Comments *@
                <partial name="_CommentPartial" model="post.Comments"/>
                <div id="commentCreateContainer-@post.Id" style="display: none">
                    <div class="col-md-6 offset-md-3 mb-3">
                        <p id="commentContent-create-@post.Id" contenteditable="false" class="card-text text-left" style="background-color: rgb(231, 231, 231); border-radius: 4px; padding: 10px; outline: 0;"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@functions {
    string GetHeartIcon(bool isLiked) => isLiked ? "fas fa-heart" : "far fa-heart";
}

<script src="js/Home/toggleLikeOfPost.js"></script>
<script src="js/Home/createComment.js"></script>